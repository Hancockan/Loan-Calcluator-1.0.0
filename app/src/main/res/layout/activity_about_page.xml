<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#f7ffb6"
    android:orientation="vertical"
    tools:context="com.hancockalc.andrewhancock.loancalculator10.AboutPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/roundedcornerlightskintone"
            android:textSize="25dp"
            android:textColor="#000000"
            android:text="About This Application"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="7dp"/>

        <TextView
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedcornerdarkerskintone"
            android:textSize="20dp"
            android:textColor="#000000"
            android:text="For questions, concerns, suggestions or complaints send an email to HancockAppDevelopment@Gmail.com. This application was developed for fun and experience by a computer engineering student at Iowa State University."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="7dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedcornerlightskintone"
            android:gravity="center"
            android:text="Future"
            android:textSize="25dp"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="7dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="Future plans for this app include adding more options and analysis. This includes the option to add a down payment."
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/roundedcornerdarkerskintone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="7dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedcornerlightskintone"
            android:gravity="center"
            android:text="Warning"
            android:textSize="25dp"
            android:textColor="#000000"/>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="7dp"/>

        <TextView
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/roundedcornerdarkerskintone"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="Do not use this app for any real financial advice or calculations. It does not take the place of a real financial advisor. Make smart decisions with your money."/>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="7dp" />
        
        <Button
            android:id="@+id/about_page_back_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:background="@drawable/roundedcornerssalmon"/>
        
    </LinearLayout>

</ScrollView>
